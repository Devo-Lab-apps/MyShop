<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.labs.devo.apps.myshop">

    <application
        android:name=".MyShopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyShop">
        <activity android:name=".view.activity.auth.AuthenticationActivity"
            />
        <activity android:name=".view.activity.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.intro.IntroActivity"/>
        <activity android:name=".view.activity.home.HomeActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            />
    </application>

</manifest>